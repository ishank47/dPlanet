{% extends "@App/base.html.twig" %}

{% block container %}
    <div class="row">
        <div class="col-md-12">
            <h1>Posts of today</h1>
            <p>Note that this is just an example page for now!</p>
            <a href="{{ path('posts.create') }}">
                <button class="btn btn-primary">New</button>
            </a>
            <hr/>
            {% for post in posts %}
                <div class="card">
                    <div class="card-header">
                        {{ post.postedBy.fullName }} posted:
                    </div>
                    <div class="card-body">
                        {% if post.image %}
                            <img src="{{ post.image.publicPath }}" style="max-width: 300px" alt="{{ post.image.filename }}">
                        {% endif %}
                        <p>{{ post.body }}</p>
                        <p class="text-muted">
                            Trends: {{ post.trends | map(trend => trend.name) | join(', ') }}
                        </p>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-default">
                            {{ post.amountOfComments }} comments
                        </button>
                        <a href="{{ path('posts.edit', { 'post': post.id }) }}">
                            <button class="btn btn-primary">Edit</button>
                        </a>
                        <a href="{{ path('posts.delete', { 'post': post.id }) }}">
                            <button class="btn btn-danger">Delete</button>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
