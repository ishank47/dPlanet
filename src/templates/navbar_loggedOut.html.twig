<html lang="en">
<head>
    {% block head %}
        <title>{% block title %}Developers Planet{% endblock %}</title>

        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    {% endblock %}
</head>
<body>
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <img src="{{ asset('assets/images/logo.png') }}" alt="The Developer Planet logo"> &lt;Developer/Planet&gt;
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('index.index') }}">Login</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('index.index') }}">Register</a>
                </li>
            </ul>
        </div>
        <span class="navbar-text">
      <input type="text" placeholder="Developer username" class="form-control form-control-sm"/>
    </span>
    </nav>
    <div class="container">
        {% block container %}{% endblock %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>